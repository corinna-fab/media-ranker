
<div class="pizza_card">
  <h1><%= @pizza[:name]%></h1>
  <br>
  <h4>Crust:</h4>
  <p><%= @pizza[:crust]%></p>
  <h4>Sauce:</h4>
  <p><%= @pizza[:sauce]%></p>
  <h4>Cheese:</h4>
  <p><%= @pizza[:cheese]%></p>
  <h4>Toppings:</h4>
  <p><%= @pizza[:toppings]%></p>
</div>

<div class="button-row"> 
  <%= button_to "Upvote Pizza", upvote_path(@pizza.id), method: :post, class: 'btn btn-primary' %>
  <%= button_to "Edit Pizza", edit_pizza_path(@pizza.id), :method => :get, class: 'btn btn-primary' %>
  </div>  <div class="button-row">
  <%= button_to "Delete", pizza_path(@pizza.id),:method => :delete, class: 'link', data: {confirm: "Are you sure you would like to delete #{@pizza.name}?"} %>
  <%= button_to "Return to Pizza List", pizzas_path, :method => :get, class: 'link' %>
</div>

<h4><%= @pizza.votes.count %> votes for this <%= @pizza.crust %> pizza</h4>

<% if ! @pizza.votes.empty? %> 
  <table>                         
    <tr>                          
      <th>Username</th>
      <th>Date</th>
    </tr>
  
    <% @pizza.votes.each do |vote| %>  
      <tr>
        <td><%= User.find_by(id: vote.user_id).name %></td>
        <td><%= vote.created_at.strftime("%m/%d/%Y") %></td>  
      </tr>
    <% end %>                    
  </table>
<% end %>  
      
