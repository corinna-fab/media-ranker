<body >
  <h2 class="title">Pizza by Crust</h2>

  <div>
    <h3 class="title">Top Thin Pizzas</h3>
    <% if ! Pizza.pizzas_by_crust('thin').nil? %>
      <% Pizza.top_ten("thin").each do |pizza| %>
        <%= link_to pizza.name, pizza_path(pizza.id) %>
        <p>Votes:<%= pizza.votes.count %></p>
      <% end%>
    <% else %>
      <p>There are no pizzas in this category</p>
    <% end %>
  </div>
  <div>
    <h3 class="title">Top Deep-dish Pizzas</h3>
    <% if ! Pizza.pizzas_by_crust('deep-dish').nil? %>
      <% Pizza.top_ten("deep-dish").each do |pizza| %>
        <%= link_to pizza.name, pizza_path(pizza.id) %>
        <p>Votes:<%= pizza.votes.count %></p>
        <br>
      <% end%>
    <% else %>
      <p>There are no pizzas in this category</p>
    <% end %>
  </div>
  <div>
    <h3 class="title">Top Thick Pizzas</h3>
    <% if ! Pizza.pizzas_by_crust('thick').nil? %>
      <% Pizza.top_ten("thick").each do |pizza| %>
        <%= link_to pizza.name, pizza_path(pizza.id) %>
        <p>Votes:<%= pizza.votes.count %></p>
      <% end%>
    <% else %>
      <p>There are no pizzas in this category</p>
    <% end %>
  </div>
</body>