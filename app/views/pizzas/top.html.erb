<body>
<main>

<section class="spotlight">
  <h2 class="spotlight__header">
    <span class="spotlight__header--prefix">
        Pizza Spotlight:
    <%= link_to Pizza.spotlight.name, pizza_path(Pizza.spotlight.id) %>,
    <%= Pizza.spotlight.crust %> crust.
     </span>
  </h2>
  <p class="spotlight__description"><%= Pizza.spotlight.votes.count %> votes</p>
</section>

<section class="top-ten__container">
  <section class="top-ten__list-container">
    <div>
      <h2 class="top-ten__header">Top Thin</h2>
      <% if ! Pizza.pizzas_by_crust('thin').nil? %>
        <ul class="list-group top-ten__list">
          <% Pizza.top_ten("thin").each do |pizza| %>
            <li class="list-group-item">
              <h4><%= link_to pizza.name, pizza_path(pizza.id) %>
              <small class="top-ten__creator"><%= pizza.crust %></small></h4>
              <p><%= pizza.votes.count %> votes</p>
            </li>
          <% end%>
          </ul>
      <% else %>
        <p>There are no pizzas in this category</p>
      <% end %>
    </div>
  </section>
    <section class="top-ten__list-container">
    <div>
      <h2 class="top-ten__header">Top Thick</h2>
      <% if ! Pizza.pizzas_by_crust('thick').nil? %>
        <ul class="list-group top-ten__list">
          <% Pizza.top_ten("thick").each do |pizza| %>
            <li class="list-group-item">
              <h4><%= link_to pizza.name, pizza_path(pizza.id) %>
              <small class="top-ten__creator"><%= pizza.crust %></small></h4>
              <p><%= pizza.votes.count %> votes</p>
            </li>
          <% end%>
          </ul>
      <% else %>
        <p>There are no pizzas in this category</p>
      <% end %>
    </div>
  </section>
    <section class="top-ten__list-container">
    <div>
      <h2 class="top-ten__header">Top Deep-Dish</h2>
      <% if ! Pizza.pizzas_by_crust('deep-dish').nil? %>
        <ul class="list-group top-ten__list">
          <% Pizza.top_ten("deep-dish").each do |pizza| %>
            <li class="list-group-item">
              <h4><%= link_to pizza.name, pizza_path(pizza.id) %>
              <small class="top-ten__creator"><%= pizza.crust %></small></h4>
              <p><%= pizza.votes.count %> votes</p>
            </li>
          <% end%>
          </ul>
      <% else %>
        <p>There are no pizzas in this category</p>
      <% end %>
    </div>
  </section>
  </main>
</body>