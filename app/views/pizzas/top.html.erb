
<body >
  <h2 class="title">Pizza by Temperature</h2>

  <div>
    <h3 class="title">Cold Pizza</h3>
    <% if ! Pizza.pizzas_by_temperature('Cold').nil? %>
      <% Pizza.top_ten("Cold").each do |pizza| %>
        <%= pizza.name %>
        <br>
      <% end%>
    <% else %>
      <p>There are no pizzas in this category</p>
    <% end %>
  </div>
  <div>
    <h3 class="title">Reheated Pizza</h3>
    <% if ! Pizza.pizzas_by_temperature('Reheated').nil? %>
