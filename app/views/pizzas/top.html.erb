        <%= pizza.name %>
        <br>
      <% end%>
    <% else %>
      <p>There are no pizzas in this category</p>
    <% end %>
  </div>
  <div>
    <h3 class="title">Hot Pizza</h3>
    <% if ! Pizza.pizzas_by_temperature('Hot').nil? %>
      <% Pizza.top_ten("Hot").each do |pizza| %>
        <%= pizza.name %>
        <br>
      <% end%>
    <% else %>
      <p>There are no pizzas in this category</p>
    <% end %>
  </div>
</body>