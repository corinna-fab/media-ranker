
<body >
<h2 class="title">Pizza by Temperature</h2>

<h3 class="title">Cold Pizza</h3>
<% @pizzas.each do |pizza| %>
  <% if ! pizza.temperatures.empty? %>
    <% if pizza.temperatures[0].name == 'Cold' %>
    <p><%= pizza.name %>
    <% end %>
  <% end %>
<% end %>

<h3 class="title">Reheated Pizza</h3>
<% @pizzas.each do |pizza| %>
  <% if ! pizza.temperatures.empty? %>
    <% if pizza.temperatures[0].name == 'Reheated' %>
    <p><%= pizza.name %>
    <% end %>
  <% end %>
<% end %>

<h3 class="title">Hot Pizza</h3>
<% @pizzas.each do |pizza| %>
  <% if ! pizza.temperatures.empty? %>
    <% if pizza.temperatures[0].name == 'Hot' %>
    <p><%= pizza.name %>
    <% end %>
  <% end %>
<% end %>

<%
=begin%>
 <table>                         
  <tr>                          
    <th>Name</th>
    <th>Crust</th>
    <th>Sauce</th>
    <th>Cheese</th>
    <th>Toppings</th>
  </tr>
<% @pizzas.each do |pizza| %>  
    <tr>
      <td><%= pizza.name %></td>
      <td><%= pizza.crust %></td>  
      <td><%= pizza.sauce %></td>  
      <td><%= pizza.cheese %></td>  
      <td><%= pizza.toppings %></td> 
      <td><%= pizza.temperatures.empty? ? 'None' : pizza.temperatures[0].name %></td>  
      <td><%= link_to "Pizza Details", pizza_path(pizza.id), :method => :get%>  </td>
      <td><%= link_to "Edit Pizza", edit_pizza_path(pizza.id), :method => :get%></td>
    </tr>
<% end %>                      
</table> 
<%
=end%>

</body>