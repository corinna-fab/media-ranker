<%#index.html.erb%>

<h1>User List</h1>
<table>
    <tr>
      <th>Username</th>
      <th>Votes</th>
      <th>Joined</th>
    </tr>
  <% @users.each do |user|  %>
    <tr>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= user.votes.count %></td>
      <td><%= user.created_at.strftime("%m/%d/%Y") %></td> 
    </tr>
  <% end %>
</table>

